@model ProductManagement.Entities.Models.Product
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}

<h1>Ürün Düzenle</h1>

@using (Html.BeginForm("Edit", "Products", FormMethod.Post,
new { enctype = "multipart/form-data" })) {
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new {@class="text-danger"})
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.ImageURL, htmlAttributes:
        new {@class="control-label col-md-2"})
            <div class="col-md-10">
                <input type="file" accept="image/*" name="img" id="img" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Adı</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name,new { htmlAttributes= new {@class="form-control"} })
                @Html.ValidationMessageFor(model => model.Name, "", new {@class="text-danger"})
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ücret ₺</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Price,new { htmlAttributes= new {@class="form-control"} })
                @Html.ValidationMessageFor(model => model.Price, "", new {@class="text-danger"})
            </div>
        </div>



        <div class="form-group">
            <label class="control-label col-md-2">Stok</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProductDetail.Description,new { htmlAttributes= new {@class="form-control"} })
                @Html.ValidationMessageFor(model => model.ProductDetail.Description, "", new {@class="text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProductDetail.IsBestSeller, htmlAttributes:
        new {@class="control-label col-md-2"})
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.DropDownListFor(c => c.ProductDetail.IsBestSeller, new SelectList(
                new[]{
                new {Value = "true", Text="Evet"},
                new {Value = "false", Text="Hayır"},

                },
                "Value",
                "Text",
                1
                ), new{@class="form-control"})
                </div>
                @Html.ValidationMessageFor(model => model.ProductDetail.IsBestSeller, "",
            new {@class="text-danger"})
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes:
        new {@class="control-label col-md-2"})
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.DropDownListFor(c => c.Status, new SelectList(
                new[]{
                new {Value = "true", Text="Aktif"},
                new {Value = "false", Text="Pasif"},

                },
                "Value",
                "Text",
                1
                ), new{@class="form-control"})
                </div>
                @Html.ValidationMessageFor(model => model.Status, "",
            new {@class="text-danger"})
            </div>
        </div>



        <br />
        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
} 