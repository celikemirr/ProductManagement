@model IEnumerable<ProductManagement.Entities.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}

<h1>Ürünler</h1>

 <a class="btn btn-danger" href="@Url.Action("Create", "Products")">Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageURL)
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                    <a class="btn btn-danger" href="@Url.Action("Edit", "Products", new{id = item.Id})">Düzenle</a>
                    <a class="btn btn-warning" href="@Url.Action("Details", "Products", new{id = item.Id})">Detay</a>
            </td>
        </tr>
}
    </tbody>
</table>
